<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusGeralActivity">

    <LinearLayout
        android:id="@+id/temperatura_mediaG_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998">

        <TextView
            android:id="@+id/tituloTemperatura_mediaG_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temperatura"
            android:textAlignment="center"
            tools:ignore="DuplicateIds" />

        <SeekBar
            android:id="@+id/temperatura_mediaG_seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:clickable="false"
            android:isScrollContainer="false"
            android:max="35"
            android:progress="5" />

        <TextView
            android:id="@+id/valorTemperatura_mediaG_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_10"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/statusTemperatura_mediaG_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ph_mediaG_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/temperatura_media_linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/temperatura_mediaG_linearLayout"
        app:layout_constraintVertical_bias="0.07999998">

        <TextView
            android:id="@+id/tituloPh_mediaG_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PH"
            android:textAlignment="center" />

        <SeekBar
            android:id="@+id/ph_mediaG_seekBar"
            style="@style/Base.Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:clickable="false"
            android:max="9"
            android:progress="1" />

        <TextView
            android:id="@+id/valorPh_mediaG_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/statusPh_mediaG_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bom"
            android:textAlignment="center" />

    </LinearLayout>

    <ListView
        android:id="@+id/listaSensores_mediaG_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ph_mediaG_linearLayout"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>